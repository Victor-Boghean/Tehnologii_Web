@using System.Web.Optimization
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model eUseControl.Domain.Entities.Product.ProductDbTable

@Styles.Render("~/bundles/css/ProductStyle")

<div class="product-view">
    <div class="container product-view">
        <div class="row">
            <div class="col-md-6">
                <div class="left-box style-box">
                    <div class="view-carousel">
                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="4000">
                            <ol class="carousel-indicators">
                                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="@Url.Content("~/assets/img/dell-front.png")" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="@Url.Content("~/assets/img/dell-left.png")" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="@Url.Content("~/assets/img/dell-uper.png")" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="right-box style-box">
                    <div class="product-name">@Html.DisplayFor(model => model.ProdusName)</div>
                    
                    <div class="descriptionu">
                        IPS tactil de 13.4 inch, Intel Core i5-10210U, 8 GB DDR4, SSD 256 GB, greutate 1.33 kg
                    </div>
                </div>
                <div class="right-box style-box price-box">
                    <div class="row">
                        @Html.ValidationSummary(true)
                        @using (Html.BeginForm("ProductsEdit", "Produs", FormMethod.Post, new { @id = "EditPrice" }))
                        {
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-md-6 w-50 div-price">
                                <div class="price">@Html.DisplayFor(model => model.Price) lei</div>

                                <button type="button" class="btn btn-warning">
                                    <i class="fa fa-hand-o-right"></i> Comandă imediat
                                </button>

                                <button type="button" class="btn btn-outline-primary">
                                    <i class="fa fa-cart-arrow-down"></i> Adaugă în Coș
                                </button>

                                <button type="button" class="btn btn-outline-primary">
                                    <i class=" fa fa-clock-o"></i> Cumpără în Rate
                                </button>
                            </div>
                        }
                        <div class="col-md-6 div-garant">
                            <div class="option">
                                <i class="fa fa-calendar-check-o"></i>  Garanție inclusă
                            </div>
                            <div class="option v2">
                                <i class="fa fa-institution"></i>  Ridicare din oficiu
                            </div>
                            <div class="option v2">
                                <i class="fa fa-car"></i>  Livrare Chișinău
                            </div>
                            <div class="option v2">
                                <i class="fa fa-car"></i>  Livrare națională
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>